<odoo>

    <record id="user_license0" model="res.users" context="{'no_reset_password': True}">
        <field name="partner_id" ref="base.res_partner_address_5"/>
        <field name="login">license</field>
        <field name="password">license</field>
        <field name="signature"><![CDATA[<span>-- <br/>Mr License Portal</span>]]></field>
        <field name="groups_id" eval="[Command.clear()]"/><!-- Avoid auto-including this user in any default group -->
    </record>

    <record id="base.group_portal" model="res.groups"><!-- Add the license user to the portal (and therefore to the portal member group) -->
        <field name="users" eval="[Command.link(ref('user_license0'))]"/>
    </record>
</odoo>
