<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="license_view_form" model="ir.ui.view">
        <field name="name">license_ocad.license_view_form</field>
        <field name="model">license.license</field>
        <field name="inherit_id" ref="license.license_view_form" />
        <field name="arch" type="xml">

            <field name="type_id" position="after">
                <field name="registered" />
                <label for="max_activations" string="Activations (Current/Max):" attrs="{'invisible': [('registered', '=', 'True')]}" />
                <div class="o_row" attrs="{'invisible': [('registered', '=', 'True')]}">
                    <field name="current_activations" nolabel="1" class="oe_inline" />
                    <span> / </span>
                    <field name="max_activations" nolabel="1" />
                </div>
                <field name="download_link" widget="url" attrs="{'invisible': [('state', '!=', 'active')]}" />
            </field>

            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button"
                    type="object" name="action_view_activations" icon="fa-check-circle-o"
                    string="Activations" />
            </xpath>

            <button name="action_activate" position="after">
                <button name="action_unlock" states="active" type="object" string="Unlock" class="btn-primary"/>
            </button>
            
        </field>
    </record>

</odoo>
